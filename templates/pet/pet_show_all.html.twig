{% extends "base.html.twig" %}

{% block sidebar %}
    {% if  is_granted('ROLE_USER')%}
        {% include 'sidebar.html.twig' %}
    {% endif %}
{% endblock %}

{% block body %}
    <div id = "petTable">
        <table id = "petTable" style="border: solid #1C440C">
            {% for row in pets|batch(3, "") %}
                <tr>
                    {% for pet in row %}
                        {% if pet != "" %}
                            <td style="border: solid #1C440C">
                                {% for photo in pet.photos %}
                                    <img src="{{ asset("uploads/photos/"~photo.photoName) }}" style="width:150px; height: auto;">
                                {% endfor %}
                                <br>
                                {{ "Ime: "~pet.name }}
                                <br>
                                {{ "Starost: "~pet.age }}
                                {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                                    <a href="/edit/{{ pet.id }}" style="font-size: .7em">edit</a>
                                {% endif %}
                            </td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}

