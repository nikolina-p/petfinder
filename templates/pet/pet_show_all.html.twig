{% extends "base.html.twig" %}

{% block body %}
    <div id = "petTable">
        <table id = "petTable" style="border: solid #1C440C">
            {% for row in pets|batch(3, "") %}
                <tr>
                    {% for pet in row %}
                        {% if pet != "" %}
                            <td style="border: solid #1C440C">
                                {% for photo in pet.photos %}
                                    <img src="{{ asset("uploads/photos/"~photo.photoName) }}" style="width:150px; height: auto;">
                                {% endfor %}
                                <br>
                                {{ "Name: "~pet.name }}
                                <br>
                                {{ "Age: "~pet.age }}
                                <br>
                                {{ "Species: "~pet.species.speciesName }}
                                {% if is_granted('edit', pet) %}
                                    <a href="{{ path('edit_pet', {'id' : pet.id}) }}" style="font-size: .7em">edit</a>
                                {% endif %}
                            </td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
