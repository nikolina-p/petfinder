{% extends 'base.html.twig' %}

{% block title %}Pet finder{% endblock %}

{% block body %}
    <body>
    <div class="petTable">
        <table id="petTable">
            <tr>
                <td>ID</td>
                <td>Species</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
            {% for singleSpecies in species %}
                <tr id = {{ singleSpecies.id }}>
                    <td>{{ singleSpecies.id }}</td>
                    <td>{{ singleSpecies.speciesName }}</td>
                    <td>
                        <a href = "{{ path('edit_species', {'id' : singleSpecies.id}) }}">edit</a>
                    </td>
                    <td>
                        <button class='Small' type="button" onclick="deleteSpecies({{ singleSpecies.id }})">X</button>
                    </td>
                </tr>
            {% endfor %}
        </table>

        <a href="{{ path('new_species') }}">New Species</a>
    </div>
    </body>
{% endblock %}
